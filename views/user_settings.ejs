<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - NBI Client</title>
    <link rel="stylesheet" href="/css/user-settings.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> 
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            <button onclick="goBack()" class="back-button">←</button>
            <div class="title">NBI SKGV</div>
        </div>
        <div class="navbar-right profile-settings">
            <div class="icon" onclick="redirectToPage('/profile')">
                <i class="fas fa-user profile-icon"></i>
            </div>
            <span>|</span>
            <div class="icon" onclick="redirectToPage('/user_settings')">
                <i class="fas fa-cog profile-icon"></i>
            </div>
        </div>
    </div>
    <div class="settings-container">
        <h1>Settings</h1>
        <div class="settings-section">
            <h2>Account Settings</h2>
            <p><strong>Email:</strong> user@example.com</p>
            <button onclick="handleChangeEmail()">Change Email</button>
            <p><strong>Password:</strong> ••••••••</p>
            <button onclick="handleChangePassword()">Change Password</button>
        </div>
        <div class="settings-section">
            <h2>Notification Settings</h2>
            <label>
                <input type="checkbox" checked> Receive email notifications
            </label>
            <label>
                <input type="checkbox" checked> Receive SMS updates
            </label>
        </div>
        <div class="settings-section">
            <h2>Privacy Settings</h2>
            <label>
                <input type="checkbox"> Make profile private
            </label>
            <label>
                <input type="checkbox" checked> Enable two-factor authentication
            </label>
        </div>
        <div class="settings-section">
            <h2>General Settings</h2>
            <label>
                Language:
                <select>
                    <option>English</option>
                    <option>Spanish</option>
                    <option>Filipino</option>
                </select>
            </label>
            <label>
                Time Zone:
                <select>
                    <option>GMT +0</option>
                    <option>GMT +8 (Philippines)</option>
                    <option>GMT -5 (Eastern Time)</option>
                </select>
            </label>
        </div>
    </div>
    <script>
        function goBack() {
            window.history.back();
        }

        function handleChangeEmail() {
            alert('Redirecting to change email settings...');
        }

        function handleChangePassword() {
            alert('Redirecting to change password settings...');
        }
    </script>
</body>
</html>
