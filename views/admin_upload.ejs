<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Details</title>
  <link rel="stylesheet" href="/css/admin_upload.css">
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  
</head>
<body>
  <div class="sidebar">
    <div class="logo">
      <img src="/images/nbi_logo.png" alt="Logo" />
    </div>
    <nav>
      <ul>
        <li><a href="/admin-dashboard"><i class="nav-item nav-link"></i> Dashboard</a></li>
        <li><a href="/admin-users"><i class="nav-item nav-link"></i> Users</a></li>
        <li><a href="/admin-upload"><i class="nav-item nav-link"></i> Upload</a></li>
        <li><a href="/admin-addcase"><i class="nav-item nav-link"></i> Add Case</a></li>
        <li><a href="/admin-notification"><i class="nav-item nav-link"></i> Notification</a></li>
        <li><a href="/admin-logs"><i class="nav-item nav-link"></i> Logs</a></li>
        <li><a href="/admin-trash"><i class="nav-item nav-link"></i> Trash</a></li>
        <li><a href="/profile"><i class="nav-item nav-link"></i> Profile</a></li>
      </ul>
    </nav>
    <div class="logout">
      <a href="/logout">
        <button>Log Out</button>
      </a>
    </div>
  </div>

  <div class="main-content">
    <h1>Uploaded Files</h1>
    <div class="table-container">
      <table id="uploadsTable">
        <thead>
          <tr>
            <th>User ID</th>
            <th>Case Title</th>
            <th>Concern</th>
            <th>Date Sent</th>
            <th>Date of Need</th>
            <th>File</th>
          </tr>
        </thead>
        <tbody>
          <% uploads.forEach(upload => { %>
            <tr>
              <td><%= upload.user_id %></td>
              <td><%= upload.case_title %></td>
              <td><%= upload.concern %></td>
              <td><%= upload.date_sent %></td>
              <td><%= upload.date_of_need %></td>
              <td>
                <% if (upload.file_path) { %>
                  <a 
                    href="/uploads/<%= upload.file_path %>" 
                    class="download-link"
                    onclick="return confirm('Download this file?')"
                  >
                    Download
                  </a>
                <% } else { %>
                  No file
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <!-- Custom Script -->
  <script>
    $(document).ready(function() {
      // Initialize DataTable
      $('#uploadsTable').DataTable();
    });
  </script>
</body>
</html>

