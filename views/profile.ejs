<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <!-- Main Container to apply flex layout -->
    <div class="main-container">
        <!-- Header Section -->
        <header class="nbi-header">
            <div class="branding">
                <img src="/images/nbi_logo.png" alt="NBI Logo" class="logo">
                <h1>National Bureau of Investigation</h1>
            </div>
            <nav class="nav-links">
                <a href="/admin-dashboard">Dashboard</a>
                <% if (user.role === 'Admin') { %>
                    <a href="#">Manage Users</a>
                    <a href="#">Admin Reports</a>
                <% } else { %>
                    <a href="#">Cases</a>
                <% } %>
                <a href="#">Reports</a>
                <a href="/logout">Logout</a>
            </nav>
        </header>

        <!-- Profile Container -->
        <main class="profile-container">
            <section class="profile-info">
                <img src="<%= user.profile_pic ? user.profile_pic : '/images/default-profile-pic.jpg' %>" 
                     alt="Profile Picture" class="profile-pic">
                <div class="details">
                    <h2><%= user.firstname %> <%= user.lastname %></h2>
                    <p><strong>ID:</strong> <%= user.user_id %></p>
                    <p><strong>Role:</strong> <%= user.role %></p>
                    <p><strong>Motto:</strong> <%= user.motto %></p>
                    <button class="btn-primary">Update Profile</button>
                </div>
            </section>

            <!-- Tabs Section -->
            <section class="tabs-section">
                <div class="tabs">
                    <button class="tab-button active" onclick="showTab('overview')">Overview</button>
                    <% if (user.role === 'Admin') { %>
                        <button class="tab-button" onclick="showTab('admin-tasks')">Admin Tasks</button>
                    <% } else { %>
                        <button class="tab-button" onclick="showTab('cases')">Cases</button>
                    <% } %>
                    <button class="tab-button" onclick="showTab('settings')">Settings</button>
                </div>
                <div class="tab-content" id="overview">
                    <p><strong>First Name:</strong> <%= user.firstname %></p>
                    <p><strong>Last Name:</strong> <%= user.lastname %></p>
                    <p><strong>Motto:</strong> <%= user.motto %></p>
                </div>
                <% if (user.role === 'Admin') { %>
                    <div class="tab-content" id="admin-tasks" style="display:none;">
                        Admin-specific tasks and management tools.
                    </div>
                <% } else { %>
                    <div class="tab-content" id="cases" style="display:none;">
                        List of active and closed cases.
                    </div>
                <% } %>
                <div class="tab-content" id="settings" style="display:none;">
                    <h3>Update Profile</h3>
                    <form action="/update-profile" method="POST" enctype="multipart/form-data" class="update-form">
                        <div class="form-group">
                            <label for="firstname">First Name</label>
                            <input type="text" id="firstname" name="firstname" value="<%= user.firstname %>" required>
                        </div>
                        <div class="form-group">
                            <label for="lastname">Last Name</label>
                            <input type="text" id="lastname" name="lastname" value="<%= user.lastname %>" required>
                        </div>
                        <div class="form-group">
                            <label for="motto">Motto</label>
                            <textarea id="motto" name="motto" rows="3"><%= user.motto %></textarea>
                        </div>
                        <div class="form-group">
                            <label for="profile_pic">Profile Picture</label>
                            <input type="file" id="profile_pic" name="profile_pic" accept="image/*">
                        </div>
                        <button type="submit" class="btn-primary">Save Changes</button>
                    </form>
                </div>
            </section>
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="nbi-footer">
        <p>&copy; 2024 National Bureau of Investigation - All Rights Reserved.</p>
    </footer>

    <!-- JavaScript for Tab Functionality -->
    <script>
        function showTab(tab) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => content.style.display = 'none');

            // Display the selected tab
            document.getElementById(tab).style.display = 'block';

            // Remove 'active' class from all buttons
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));

            // Add 'active' class to the clicked button
            document.querySelector(`.tab-button[onclick="showTab('${tab}')"]`).classList.add('active');
        }
    </script>
</body>
</html>
