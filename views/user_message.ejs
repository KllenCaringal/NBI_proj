<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NBI SKGV - Messages</title>
    <link rel="stylesheet" href="/css/user-message.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="navbar" id="navbar">
        <div class="navbar-left">
            <div class="hamburger" id="hamburger" onclick="toggleSidebar()">â˜°</div>
            <img src="/images/loggg.png" alt="Logo" class="navbar-logo">
            <div class="title" id="title">NBI SKGV</div>
        </div>
        <div class="search-container">
            <input type="text" placeholder="ğŸ”" aria-label="Search">
        </div>
        <div class="navbar-right profile-settings">
            <div class="icon" onclick="redirectToPage('/profile')">
                <i class="fas fa-user profile-icon"></i>
            </div>
            <span>|</span>
            <div class="icon" onclick="redirectToPage('/user_settings')">
                <i class="fas fa-cog profile-icon"></i>
            </div>
        </div>
    </div>
    <div id="sidebar" class="sidebar">
        <div class="back-button" onclick="toggleSidebar()">â†</div>
        <ul>
            <li><span class="sidebar-icon">ğŸ </span><a href="/user_home">Home</a></li>
            <li><span class="sidebar-icon">ğŸ’¬</span><a href="/user_message">Message</a></li>
            <li><span class="sidebar-icon">ğŸ“¤</span><a href="/user_upload">Upload</a></li>
            <li><span class="sidebar-icon">ğŸ””</span><a href="/user_notifications">Notification</a></li>
        </ul>
        <div class="logout" onclick="handleLogout()">
            <span class="sidebar-icon">ğŸšª</span>Logout
        </div>
    </div>
    <div class="content">
        <h1>Messages</h1>
        <div class="chat-container">
            <div class="message-area" id="messageArea"></div>
            <div class="input-area">
                <input type="text" id="messageInput" placeholder="Type your message..." aria-label="Message">
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>
    </div>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const title = document.getElementById('title');
            const hamburger = document.getElementById('hamburger');
            const content = document.querySelector('.content'); 
        
            if (sidebar.style.left === '0px') {
                sidebar.style.left = '-250px';
                title.classList.remove('shifted');
                hamburger.classList.remove('hidden');
                content.classList.remove('shifted'); 
            } else {
                sidebar.style.left = '0px';
                title.classList.add('shifted');
                hamburger.classList.add('hidden');
                content.classList.add('shifted'); 
            }
        }
        

        function redirectToPage(url) {
            window.location.href = url;
        }

        function handleLogout() {
            alert('Logout clicked');
            
        }

        function sendMessage() {
            const messageInput = document.getElementById('messageInput');
            const messageText = messageInput.value.trim();
            if (messageText) {
                const messageArea = document.getElementById('messageArea');
                const messageElement = document.createElement('div');
                messageElement.classList.add('message');
                messageElement.innerText = messageText;
                messageArea.appendChild(messageElement);
                messageInput.value = ''; 
                messageArea.scrollTop = messageArea.scrollHeight;
            }
        }
    </script>
</body>
</html>
